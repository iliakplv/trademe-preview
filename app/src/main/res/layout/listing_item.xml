<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?android:attr/selectableItemBackground"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/listing_item_vertical_padding"
              android:paddingLeft="@dimen/listing_item_horizontal_padding"
              android:paddingRight="@dimen/listing_item_horizontal_padding"
              android:paddingTop="@dimen/listing_item_vertical_padding">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/listing_image_size"
        android:layout_height="@dimen/listing_image_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/listing_item_horizontal_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listing_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/listing_item_vertical_padding"
            android:textColor="@color/list_item_text_color"
            android:textSize="@dimen/listing_title_text_size"/>

        <TextView
            android:id="@+id/listing_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/listing_item_vertical_padding"
            android:textColor="@color/list_item_text_color_secondary"
            android:textSize="@dimen/listing_id_text_size"/>

    </LinearLayout>

</LinearLayout>