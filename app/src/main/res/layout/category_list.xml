<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical"
    tools:context="com.iliakplv.trademepreview.ui.activities.CategoryListActivity">

    <TextView
        android:id="@+id/category_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textColor="@color/path_text_color"
        android:textSize="@dimen/path_text_size"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/category_list"
        android:name="com.iliakplv.trademepreview.CategoryListFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/category_list_content"/>

</LinearLayout>
