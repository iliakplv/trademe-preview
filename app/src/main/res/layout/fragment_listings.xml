<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iliakplv.trademepreview.ui.fragments.ListingsFragment">

    <include layout="@layout/listing_list_empty"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/listings_progress_bar_size"
        android:layout_height="@dimen/listings_progress_bar_size"
        android:layout_gravity="center"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listings_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/listing_item"/>

</FrameLayout>
